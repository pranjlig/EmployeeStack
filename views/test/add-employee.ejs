<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <% if (success && success.length) {%> 
        <div class="alert alert-success alert-dismissible fade show alert-div" role="alert">
          <p class="alert-p"><%- success -%> </p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%> 
    <% if (error && error.length) {%>
        <div class="alert alert-danger alert-dismissible fade show alert-div" role="alert">
            <p class="alert-p"><%- error -%> </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }%>
    <% if (warning && warning.length) {%>       
        <div class="alert alert-warning alert-dismissible fade show alert-div" role="alert">
            <p class="alert-p"><%- warning -%> </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }%>
    <form action="" method="POST">
        <div>
            <label for="name">Name: </label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="email">Email: </label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="phone">Phone: </label>
            <input type="number" id="phone" name="phone" required min="0">
        </div>
        <div>
            <label for="salary">Salary: </label>
            <input type="number" id="salary" name="salary" required min="1" step="any">
        </div>
        <div>
            <textarea name="address" id="address" cols="20" rows="3" required></textarea>
        </div>
        <button>Submit</button>
    </form>
    <table border="1px">
        <thead>
            <th>Employee Name</th>
            <th>Phone</th>
            <th>Email</th>
        </thead>
        <tbody>
            <% if (employees && employees.length) { %>
                <% for (const employee of employees) { %>
                <tr>
                    <td> <a href=<%- `/admin/employees/${employee._id}` %> ><%- employee.name %></a> </td>
                    <td><%- employee.phone %> </td>
                    <td><%- employee.email %> </td>
                </tr>
                <% } %>  
            <% } %>  
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>