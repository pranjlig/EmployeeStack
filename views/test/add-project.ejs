<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <% if (success && success.length) {%> 
        <div class="alert alert-success alert-dismissible fade show alert-div" role="alert">
          <p class="alert-p"><%- success -%> </p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%> 
    <% if (error && error.length) {%> 
        <div class="alert alert-danger alert-dismissible fade show alert-div" role="alert">
            <p class="alert-p"><%- error -%> </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% }%> 
    <form action="/logout" method="POST">
        <button>Logout</button>
    </form>
    <form action="" method="POST">
        <div>
            <label for="name">Project Name: </label>
            <input type="text" name="projectName" id="name" required>
        </div>
        <select name="status" id="status" required>
            <option selected value="In-Progress">In-Progress</option>
            <option value="Completed">Completed</option>
        </select>
        <div>
            <label for="startDate">Start Date</label>
            <input type="date" name="startDate" id="startDate" class="datePicker" required>
        </div>
        <div>
            <label for="requiredEndDate">Required Date</label>
            <input type="date" name="requiredEndDate" id="requiredEndDate">
        </div>
        <div>
            <textarea name="description" id="string" cols="30" rows="2"></textarea>
        </div>
        <button>Submit</button>
    </form>

    <table border="1px">
        <thead>
            <th>Start Date</th>
            <th>Project Name</th>
            <th>Status</th>
        </thead>
        <tbody>
            <% if (projects && projects.length) { %>
                <% for (const project of projects) { %>
                <tr>
                    <td><%- project.startDate.toLocaleString().split(",")[0] %> </td>
                    <td> <a href=<%- `/admin/projects/${project._id}` %> ><%- project.name %></a> </td>
                    <td><%- project.status %> </td>
                </tr>
                <% } %>  
            <% } %>  
        </tbody>
    </table>
    <script type="text/javascript" src="/date.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>