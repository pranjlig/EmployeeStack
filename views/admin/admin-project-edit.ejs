    <main class="mt-5 pt-3">
        <div class="container-fluid top-container">
            <% if (success && success.length) {%> 
                <div class="alert alert-success alert-dismissible fade show alert-div" role="alert">
                  <p class="alert-p"><%- success -%> </p>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% }%> 
            <% if (error && error.length) {%> 
                <div class="alert alert-danger alert-dismissible fade show alert-div" role="alert">
                    <p class="alert-p"><%- error -%> </p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }%>
            <% if (info && info.length) {%> 
                <div class="alert alert-info alert-dismissible fade show alert-div" role="alert">
                    <p class="alert-p"><%- info -%> </p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }%>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    Are you sure you want to delete this project?
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    <form action=<%- `/admin/projects/${project._id}?_method=delete` %>  method="POST">
                        <div class=" ">

                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                    </form>
                    </div>
                </div>
                </div>
            </div>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalTerminate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    Are you sure you want to terminate this project?
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    <form action=<%- `/admin/projects/${project._id}/terminate` %>  method="POST">
                        <div class=" ">

                            <button type="submit" class="btn btn-info">Terminate</button>
                        </div>
                    </div>
                    </form>
                    </div>
                </div>
                </div>
            </div>
            <div class="row">

                <div class="container-form p-4">
                    <div class="col-md-12 fw-bold fs-3">Edit Project</div>
                    <div class="form-align">
                        <form method="POST" class="row">
                            <div class="mb-3 col-md-6">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="projectName" value="<%- project.name %>" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Project Expense (Last Month/Completed)</label>
                                <div class="input-group mb-3">

                                    <span class="input-group-text">â‚¹</span>
                                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                                        value=<%- Math.round((project.total + Number.EPSILON) * 100) / 100 %>   readonly>

                                </div>
                            </div>

                            <div class="mb-3 col-md-4">
                                <label for="start-date" class="form-label">Start date</label>
                                <input type="date" class="form-control" name="startDate" required id="start-date" value=<%- `${project.startDate.getFullYear()}-${("0" + (project.startDate.getMonth() + 1)).slice(-2)}-${("0" + project.startDate.getDate()).slice(-2)}` %>>
                            </div>
                            <div class="mb-3 col-md-4">
                                <label for="req-end-date" class="form-label">Required end date</label>
                                <input type="date" class="form-control" name="requiredEndDate" id="req-end-date" value=<%- project.requiredEndDate ? `${project.requiredEndDate.getFullYear()}-${("0" + (project.requiredEndDate.getMonth() + 1)).slice(-2)}-${("0" + project.requiredEndDate.getDate()).slice(-2)}` : ""%>>
                            </div>
                            <div class="mb-3 col-md-4">
                                <label for="select" class="form-label">Status</label>
                                <input type="text" class="form-control" name="status"
                                        value=<%- project.status %>  readonly>
                                <!-- <select class="form-select" id="select" aria-label="Default select example">

                                    <option selected value="1">On-going</option>
                                    <option value="2">Completed</option>

                                </select> -->
                            </div>
                            <div class="mb-3 col-md-12">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" rows="2" id="description"
                                    name="description"><%= project.description %></textarea>
                            </div>


                            <div class="d-flex justify-content-center">
                                <div class="">
                                    <button type="submit" class="btn btn-custom btn-submit me-5">Update</button>

                                </div>
                        </form>
                        <button type="button" class="btn btn-danger btn-submit" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Delete
                        </button>
                        <button type="button" class="btn btn-info btn-submit mx-5" data-bs-toggle="modal" data-bs-target="#exampleModalTerminate">
                            Terminate
                        </button>
                        
                        
                        
                </div>
            </div>
        </div>
